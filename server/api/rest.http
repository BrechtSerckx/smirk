
:host = http://localhost:8765

# Get the currently running version
GET :host/api/version

# Get the last received IR signal
# Response body:
# {
#   "signal": infrared signal
# }
GET :host/api/signal

# Send a IR signal
POST :host/api/signal
Content-Type: application/json
{
  "protocol": "RC6",
  "value": "0xC",
  "bits": 20,
  "address": "0x0"
}
